<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.1.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">

    <!-- Broadleaf requires AOP -->
    <aop:config/>
    
    <!-- Allow annotation driven controllers -->
    <mvc:annotation-driven/>

    <!-- Scan for custom controllers -->
    <context:component-scan base-package="com.mycompany.admin.controller" />

    <bean id="blAdminLoginController" class="com.mycompany.admin.controller.AdminLoginController">
        <property name="loginView" value="login/login"/>
        <property name="forgotPasswordView" value="login/forgotPassword"/>
        <property name="forgotUsernameView" value="login/forgotUsername"/>
        <property name="resetPasswordView" value="login/resetPassword"/>
        <property name="changePasswordView" value="login/changePassword"/>
    </bean>

    <!-- Tell Spring to not try to map things in these directories to controllers -->
    <!-- Order must be set to supercede the handler configured by the mvc:annotation-driven annotation -->
    <mvc:resources order="-10" location="/img/" mapping="/img/**" />
    <mvc:resources order="-10" location="/css/" mapping="/css/**" />
    <mvc:resources order="-10" location="/fonts/" mapping="/fonts/**" />
    <mvc:resources order="-10" location="/favicon.ico" mapping="favicon.ico" />
    <mvc:resources order="-10" location="/robots.txt" mapping="robots.txt" />
    
    <!-- Base Jawr config -->
    <bean abstract="true" id="jawrBase" class="net.jawr.web.servlet.JawrSpringController">
        <!-- This must match the servlet-mapping to which the spring servlet is bound -->
        <property name="configLocation" value="/jawr.properties" />
        <property name="configuration">
            <props>
                <prop key="jawr.debug.on">${jawr.debug.on}</prop>
                <prop key="jawr.gzip.on">${jawr.gzip.on}</prop>
            </props>
        </property>
    </bean>

    <bean id="jawrJsController" parent="jawrBase" />
    
    <bean id="jawrCssController" parent="jawrBase">
        <property name="type" value="css" />
    </bean>

    <bean id="jawrUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="order" value="-10" />
        <property name="mappings">
            <map>
                <entry key="/js/**" value-ref="jawrJsController" />
                <entry key="/css/**" value-ref="jawrCssController" />
                <entry key="/gzip_*/js/**" value-ref="jawrJsController" />
                <entry key="/gzip_*/css/**" value-ref="jawrCssController" />
            </map>
        </property>
    </bean>
    
    <!-- Set up the view resolver to be used by Spring -->
    <bean class="org.broadleafcommerce.common.web.BroadleafThymeleafViewResolver">
        <property name="templateEngine" ref="blAdminWebTemplateEngine" />
        <property name="order" value="1" />
        <property name="cache" value="false" />
        <property name="characterEncoding" value="UTF-8" />
        <property name="fullPageLayout" value="layout/fullPageLayout" />
        <property name="layoutMap">
            <map>
                <entry key="login/" value="layout/loginLayout" />
                <entry key="views/" value="NONE" />
                <entry key="modules/modalContainer" value="NONE" />
            </map>
        </property>
    </bean>

    <mvc:interceptors>
        <!-- Interceptor for locale-->
        <bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
            <property name="paramName" value="locale"/>
        </bean>
    </mvc:interceptors>

    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver">
        <property name="defaultLocale" value="en"/>
    </bean>

    <mvc:default-servlet-handler/>

</beans>
